{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "ts-dist",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@models/*": ["src/db/models/*"],
            "@routes/*": ["src/routes/*"],
            "@doa/*": ["src/doa/*"],
            "@controllers/*": ["src/controllers/*"],
            "@config/*": ["config/*"],
            "@src/*": ["src/*"],
            "*": ["./*"]
        }
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}