{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "ts-dist",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@models/*": ["src/models/*"],
            "@routers/*": ["src/routers/*"],
            "@doa/*": ["src/doa/*"],
            "@controllers/*": ["src/controllers/*"],
            "@config/*": ["src/config/*"],
            "@src/*": ["src/*"],
            "*": ["./*"]
        }
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}